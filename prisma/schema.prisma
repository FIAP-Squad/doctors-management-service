generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model doctor {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  crm          String         @unique
  cpf          String         @unique
  availability availability[]
  appointment  appointment[]
}

model availability {
  id       Int        @id @default(autoincrement())
  date     DateTime
  doctorId Int
  doctor   doctor     @relation(fields: [doctorId], references: [id])
  timeSlot timeSlot[]

  @@index([doctorId])
}

model timeSlot {
  id             Int           @id @default(autoincrement())
  status         String        @default("available")
  startTime      DateTime
  endTime        DateTime
  availabilityId Int
  availability   availability  @relation(fields: [availabilityId], references: [id])
  appointment    appointment[]

  @@index([availabilityId])
}

model appointment {
  id         Int      @id @default(autoincrement())
  doctorId   Int
  patientId  Int
  timeSlotId Int
  createdAt  DateTime @default(now())
  status     String
  doctor     doctor   @relation(fields: [doctorId], references: [id])
  timeSlot   timeSlot @relation(fields: [timeSlotId], references: [id])

  @@index([doctorId])
  @@index([patientId])
  @@index([timeSlotId])
}

