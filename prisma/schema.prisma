generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Doctor {
  id         Int           @id @default(autoincrement())
  name       String
  email      String        @unique
  crm        String        @unique
  specialty  String?
  Availability Availability[]
  Appointment Appointment[]
}

